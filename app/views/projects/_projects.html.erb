<div  id="div-projects-title"> My projects </div>
<div class="album py-5 bg-white">
  <div class="container">
    <div class="row justify-content-center">
      <% unless @projects.present? %>
        <h3>Pas de projet validé à ce jours</h3>
      <% end %>
      <% @projects.each do |project| %>
        <div class="col-lg-4 col-sm-12 portfolio-item rounded  ">
          <div class="card h-100 p-1 ">
            <% if project.picture.attached?%>
              <%= image_tag project.picture,class:"card-img-top"%>
            <% end %>
            <!-- Card content -->
            <div class="card-body p-1 bg-white rounded m-1">
              <h4 class="card-title ">
                <%= truncate(project.title, length: 50) %> :</h4>
              <p class="card-text "><%= truncate(project.description, length: 100) %></p>
            </div>
            <!-- Button -->
            <%= link_to  "En lire plus", project_path(project.id),class:'btn btn-warning' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
