<div class="jumbotron">
  <%= simple_form_for(@message) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :phone_number %>
    <%= f.input :body%>
    <%= f.button :submit %>
  <% end %>
</div>
