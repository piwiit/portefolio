<%= render 'header'%>
<%=render 'body'%>
<%= link_to 'New Project', new_project_path,class:"btn btn-warning my-3 " %>
<div class="album py-5 bg-light">
  <div class="container">
    <div class="row justify-content-center">
      <% unless @projects.present? %>
        <h3>Pas de projet validé à ce jours</h3>
      <% end %>
      <% @projects.each do |project| %>
        <div class="col-md-5 col-sm-12 col-xs-12 card m-4 rounded">
          <div class="card-body ">
            <%=cl_image_tag project.picture.key%>
            <div class="card-title">
              <h3><%= project.title %></h3>
              <p class="card-text"><%= project.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group text-center">
                  <%= link_to 'Show', project ,class:"btn btn-sm btn-outline-warning text-muted unscale"%>
                  <a href="<%=project.url%>" class="btn btn-sm btn-outline-warning text-muted unscale">Aller sur le site</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
